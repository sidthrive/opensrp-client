<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="fill_parent"
              android:layout_height="@dimen/list_item_height"
    android:weightSum="10">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:id="@+id/profile_info_layout"
        android:layout_weight="3">

        <ImageView
            android:layout_width="@dimen/client_profile_pic_width"
            android:layout_height="80dp"
            android:id="@+id/profilepic"
            android:src="@mipmap/child_boy_infant"
            android:layout_margin="2dp"
            android:layout_gravity="center_vertical"
            android:scaleType="fitXY" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:layout_weight="1">

            <org.ei.opensrp.view.customControls.CustomFontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Medium Text"
                style="@style/CustomFontTextViewStyle.ListView.Medium"
                android:id="@+id/txt_kk_name"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="16sp" />

            <org.ei.opensrp.view.customControls.CustomFontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                style="@style/CustomFontTextViewStyle.ListView.Medium"
                android:text="Medium Text"
                android:id="@+id/no_kk"
                android:textColor="@color/light_blue"
                android:textSize="16sp" />

            <org.ei.opensrp.view.customControls.CustomFontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Medium Text"
                android:textAppearance="?android:attr/textAppearanceSmall"
                style="@style/CustomFontTextViewStyle.ListView.Medium"
                android:id="@+id/tanggal"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#000000" />

            <org.ei.opensrp.view.customControls.CustomFontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                style="@style/CustomFontTextViewStyle.ListView.Medium"
                android:text="Medium Text"
                android:id="@+id/tgl_kk"
                android:textSize="14sp" />
        </LinearLayout>

    </LinearLayout>

    <ImageView
            android:layout_width="@dimen/smart_register_client_divider_height"
            android:layout_height="fill_parent"
            android:src="@color/smart_register_client_divider_color"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="2"
        android:layout_gravity="center">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:layout_weight="1">

            <org.ei.opensrp.view.customControls.CustomFontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                style="@style/CustomFontTextViewStyle.ListView.Normal.MultipleLines"
                android:text="Last Visit :"
                android:id="@+id/txt_tgl_relokasi"
                android:textSize="16sp" />

            <org.ei.opensrp.view.customControls.CustomFontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                style="@style/CustomFontTextViewStyle.ListView.Normal.MultipleLines"
                android:text=""
                android:id="@+id/txt_jenis_perpindahan"
                android:textSize="16sp" />

            <org.ei.opensrp.view.customControls.CustomFontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                style="@style/CustomFontTextViewStyle.ListView.Normal.MultipleLines"
                android:text=" :"
                android:id="@+id/txt_lama_pindah"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:id="@+id/txt_alasan_pindah"
                style="@style/CustomFontTextViewStyle.ListView.Normal.MultipleLines"
                android:textColor="#fa0303" />

        </LinearLayout>

    </LinearLayout>

    <ImageView
            android:layout_width="@dimen/smart_register_client_divider_height"
            android:layout_height="fill_parent"
            android:src="@color/smart_register_client_divider_color"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="2"
        android:layout_gravity="center">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:layout_weight="1">

            <org.ei.opensrp.view.customControls.CustomFontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                style="@style/CustomFontTextViewStyle.ListView.Normal.MultipleLines"
                android:text="Last Visit :"
                android:id="@+id/txt_tgl_kelahiran"
                android:textSize="16sp" />
            
                        <org.ei.opensrp.view.customControls.CustomFontTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            style="@style/CustomFontTextViewStyle.ListView.Normal.MultipleLines"
                            android:text=""
                            android:id="@+id/txt_nama_ibu"
                            android:textSize="16sp" />

                        <org.ei.opensrp.view.customControls.CustomFontTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            style="@style/CustomFontTextViewStyle.ListView.Normal.MultipleLines"
                            android:text=" :"
                            android:id="@+id/txt_birthplace"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:id="@+id/txt_birth_assistant"
                            style="@style/CustomFontTextViewStyle.ListView.Normal.MultipleLines"
                            android:textColor="#fa0303" />
            
                    </LinearLayout>

                </LinearLayout>

                <ImageView
                        android:layout_width="@dimen/smart_register_client_divider_height"
                        android:layout_height="fill_parent"
                        android:src="@color/smart_register_client_divider_color"/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="2"
                    android:layout_gravity="center">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="1dp"
                        android:layout_marginBottom="1dp"
                        android:layout_weight="1">

                        <org.ei.opensrp.view.customControls.CustomFontTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            style="@style/CustomFontTextViewStyle.ListView.Normal.MultipleLines"
                            android:text="Last Visit :"
                            android:id="@+id/txt_tgl_kematian"
                            android:textSize="16sp" />

                                    <org.ei.opensrp.view.customControls.CustomFontTextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textAppearance="?android:attr/textAppearanceMedium"
                                        style="@style/CustomFontTextViewStyle.ListView.Normal.MultipleLines"
                                        android:text=" :"
                                        android:id="@+id/txt_place_death"
                                        android:textSize="16sp" />

                                    <org.ei.opensrp.view.customControls.CustomFontTextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textAppearance="?android:attr/textAppearanceMedium"
                                        style="@style/CustomFontTextViewStyle.ListView.Normal.MultipleLines"
                                        android:text=" :"
                                        android:id="@+id/txt_pregnancy_status"
                                        android:textSize="16sp" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text=""
                                        android:id="@+id/txt_penyebab_kematian"
                                        style="@style/CustomFontTextViewStyle.ListView.Normal.MultipleLines"
                                        android:textColor="#fa0303" />

                                </LinearLayout>

                            </LinearLayout>

                            <ImageView
                                android:layout_width="@dimen/smart_register_client_divider_height"
                                android:layout_height="fill_parent"
                                android:id="@+id/imageView"
                                android:src="@color/smart_register_client_divider_color" />

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="0dp"
                                android:layout_height="fill_parent"
                                android:layout_weight="1">

                                <ImageButton
                                    android:id="@+id/btn_edit"
                                    android:layout_width="@dimen/list_edit_icon_view_width"
                                    android:layout_height="fill_parent"
                                    android:layout_weight="80"
                                    android:scaleType="center"
                                    android:gravity="center"
                                    android:layout_margin="5dp"
                                    android:clickable="true"
                                    android:focusable="true"
                                    android:background="@drawable/edit_button_background"/>
                            </LinearLayout>
                            <ImageView
                                android:layout_width="@dimen/smart_register_client_divider_height"
                                android:layout_height="fill_parent"
                                android:src="@color/smart_register_client_divider_color"/>

                        </LinearLayout>