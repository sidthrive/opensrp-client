<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="#ff313131">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/bg_texture"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="30dp">

            <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1">

                <ImageButton
                        android:id="@+id/btn_demographic_register"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/register_child"
                        style="@style/ImageButton.Home.Register"/>

                <org.ei.opensrp.view.customControls.CustomFontTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Demographic"
                        style="@style/CustomFontTextViewStyle.Home.RegisterName"/>

                <org.ei.opensrp.view.customControls.CustomFontTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="surveillance"
                        style="@style/CustomFontTextViewStyle.Home.RegisterLabel"/>

                <org.ei.opensrp.view.customControls.CustomFontTextView
                        android:id="@+id/txt_demographic_register_client_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/CustomFontTextViewStyle.Badge2"/>

            </FrameLayout>



        </LinearLayout>

    </LinearLayout>



</LinearLayout>
