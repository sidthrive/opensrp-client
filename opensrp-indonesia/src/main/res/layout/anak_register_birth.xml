<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/client_anak_status_layout"
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_margin="2dp"
    android:layout_weight="15">

    <org.ei.opensrp.view.customControls.CustomFontTextView
        android:id="@+id/lbl_anak_register_dob"
        style="@style/CustomFontTextViewStyle.ListView.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="@string/birth_weight_title"
        android:textStyle="normal" />

    <org.ei.opensrp.view.customControls.CustomFontTextView
        android:id="@+id/anak_register_dob"
        style="@style/CustomFontTextViewStyle.ListView.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/lbl_anak_register_dob" />

    <!--             -->
    <ImageView
        android:id="@+id/icon_salep_yes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/anak_register_dob"
        android:src="@drawable/ic_yes_small"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/icon_salep_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/anak_register_dob"
        android:src="@drawable/ic_no_small"
        />

    <org.ei.opensrp.view.customControls.CustomFontTextView
        android:id="@+id/is_salep"
        style="@style/CustomFontTextViewStyle.ListView.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/anak_register_dob"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:text="Salep Mata" />

    <!--           -->
    <ImageView
        android:id="@+id/icon_imd_yes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/is_salep"
        android:src="@drawable/ic_yes_small"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/icon_imd_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/is_salep"
        android:src="@drawable/ic_no_small"
        />

    <org.ei.opensrp.view.customControls.CustomFontTextView
        android:id="@+id/is_imd"
        style="@style/CustomFontTextViewStyle.ListView.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/is_salep"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:text="IMD" />
    <!--           -->
    <ImageView
        android:id="@+id/icon_vit_k_yes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/is_imd"
        android:src="@drawable/ic_yes_small"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/icon_vit_k_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/is_imd"
        android:src="@drawable/ic_no_small"
        />


    <org.ei.opensrp.view.customControls.CustomFontTextView
        android:id="@+id/is_vit_k"
        style="@style/CustomFontTextViewStyle.ListView.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/is_imd"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:text=" Vit K" />
    <!--           -->

</RelativeLayout>