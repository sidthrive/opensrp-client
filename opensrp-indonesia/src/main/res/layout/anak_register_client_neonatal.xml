<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/client_anak_neonatal_layout"
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_weight="16"
    android:layout_margin="2dp"
    android:background="@color/status_bar_text_almost_white">

    <ImageView
        android:id="@+id/icon_immuni_hb_yes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:src="@drawable/ic_yes_small"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/icon_immuni_hb_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:src="@drawable/ic_no_small"
        />

    <org.ei.opensrp.view.customControls.CustomFontTextView
        android:id="@+id/is_immuni_hb"
        style="@style/CustomFontTextViewStyle.ListView.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:text=" HB 0" />


    <ImageView
        android:id="@+id/icon_pol1_yes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/is_immuni_hb"
        android:src="@drawable/ic_yes_small"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/icon_pol1_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/is_immuni_hb"
        android:src="@drawable/ic_no_small"
        />

    <org.ei.opensrp.view.customControls.CustomFontTextView
        android:id="@+id/is_pol1"
        style="@style/CustomFontTextViewStyle.ListView.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:layout_below="@+id/is_immuni_hb"
        android:text=" BCG dan Polio 1" />

    <ImageView
        android:id="@+id/icon_pol2_yes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/is_pol1"
        android:src="@drawable/ic_yes_small"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/icon_pol2_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/is_pol1"
        android:src="@drawable/ic_no_small"
        />


    <org.ei.opensrp.view.customControls.CustomFontTextView
        android:id="@+id/is_pol2"
        style="@style/CustomFontTextViewStyle.ListView.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/is_pol1"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:text=" DPT/HB1/Polio 2" />




</RelativeLayout>