<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="73">

    <org.ei.opensrp.view.customControls.CustomFontTextView
        android:id="@+id/txt_ibu_ki_no"
        style="@style/CustomFontTextViewStyle.ListView.Medium"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="10" />

    <ImageView
        android:layout_width="@dimen/smart_register_client_divider_height"
        android:layout_height="fill_parent"
        android:src="@color/smart_register_client_divider_color" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="17">

        <org.ei.opensrp.view.customControls.CustomFontTextView
            android:id="@+id/lbl_anak_register_dob"
            style="@style/CustomFontTextViewStyle.ListView.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="@string/dob_title"
            android:textStyle="normal" />

        <org.ei.opensrp.view.customControls.CustomFontTextView
            android:id="@+id/anak_register_dob"
            style="@style/CustomFontTextViewStyle.ListView.Medium.NoPadding.NoBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/lbl_anak_register_dob" />

        <org.ei.opensrp.view.customControls.CustomFontTextView
            android:id="@+id/lbl_tempat_lahir"
            style="@style/CustomFontTextViewStyle.ListView.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/lbl_anak_register_dob"
            android:text="@string/birth_place_title"
            android:textStyle="normal" />

        <org.ei.opensrp.view.customControls.CustomFontTextView
            android:id="@+id/tempat_lahir"
            style="@style/CustomFontTextViewStyle.ListView.Medium.NoPadding.NoBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/lbl_anak_register_dob"
            android:layout_toRightOf="@id/lbl_tempat_lahir"
            android:text="Puskesmas"
            android:textStyle="normal" />

        <org.ei.opensrp.view.customControls.CustomFontTextView
            android:id="@+id/lbl_berat_lahir"
            style="@style/CustomFontTextViewStyle.ListView.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/lbl_tempat_lahir"
            android:text="@string/birth_weight_title"
            android:textStyle="normal" />

        <org.ei.opensrp.view.customControls.CustomFontTextView
            android:id="@+id/berat_lahir"
            style="@style/CustomFontTextViewStyle.ListView.Medium.NoPadding.NoBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/lbl_tempat_lahir"
            android:layout_toRightOf="@id/lbl_berat_lahir"
            android:text="3300"
            android:textStyle="normal" />

        <org.ei.opensrp.view.customControls.CustomFontTextView
            android:id="@+id/lbl_tipe_lahir"
            style="@style/CustomFontTextViewStyle.ListView.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/lbl_berat_lahir"
            android:text="@string/plan_type" />

        <org.ei.opensrp.view.customControls.CustomFontTextView
            android:id="@+id/tipe_lahir"
            style="@style/CustomFontTextViewStyle.ListView.Medium.NoPadding.NoBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/lbl_berat_lahir"
            android:layout_toRightOf="@id/lbl_tipe_lahir"
            android:text="Normal"
            android:textStyle="normal" />

    </RelativeLayout>


    <ImageView
        android:layout_width="@dimen/smart_register_client_divider_height"
        android:layout_height="fill_parent"
        android:src="@color/smart_register_client_divider_color" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="16">

        <ImageView
            android:id="@+id/icon_hb0_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/ic_no_small"
            />

        <ImageView
            android:id="@+id/icon_hb0_yes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/ic_yes_small"
            android:visibility="gone" />

        <org.ei.opensrp.view.customControls.CustomFontTextView
            android:id="@+id/is_hb0"
            style="@style/CustomFontTextViewStyle.ListView.Medium.NoPadding.NoBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="25dp"
            android:layout_marginLeft="25dp"
            android:text=" Hb 0-7 hari" />

        <ImageView
            android:id="@+id/icon_pol1_yes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/is_hb0"
            android:src="@drawable/ic_yes_small"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/icon_pol1_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/is_hb0"
            android:src="@drawable/ic_no_small"
            />

        <org.ei.opensrp.view.customControls.CustomFontTextView
            android:id="@+id/is_pol1"
            style="@style/CustomFontTextViewStyle.ListView.Medium.NoPadding.NoBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/is_hb0"
            android:layout_marginStart="25dp"
            android:layout_marginLeft="25dp"
            android:text=" BCG dan Polio 1" />

        <ImageView
            android:id="@+id/icon_pol2_yes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/is_pol1"
            android:src="@drawable/ic_yes_small"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/icon_pol2_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/is_pol1"
            android:src="@drawable/ic_no_small"
            />


        <org.ei.opensrp.view.customControls.CustomFontTextView
            android:id="@+id/is_pol2"
            style="@style/CustomFontTextViewStyle.ListView.Medium.NoPadding.NoBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/is_pol1"
            android:layout_marginStart="25dp"
            android:layout_marginLeft="25dp"
            android:text=" DPT/HB1/Polio 2" />

        <ImageView
            android:id="@+id/icon_pol3_yes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/is_pol2"
            android:src="@drawable/ic_yes_small"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/icon_pol3_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/is_pol2"
            android:src="@drawable/ic_no_small"
            />

        <org.ei.opensrp.view.customControls.CustomFontTextView
            android:id="@+id/is_pol3"
            style="@style/CustomFontTextViewStyle.ListView.Medium.NoPadding.NoBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/is_pol2"
            android:layout_marginStart="25dp"
            android:layout_marginLeft="25dp"
            android:text=" DPT/HB2/Polio 3" />

    </RelativeLayout>

    <ImageView
        android:layout_width="@dimen/smart_register_client_divider_height"
        android:layout_height="fill_parent"
        android:src="@color/smart_register_client_divider_color" />

    <include layout="@layout/anak_register_client_birth_status"/>
    <ImageView
        android:layout_width="@dimen/smart_register_client_divider_height"
        android:layout_height="fill_parent"
        android:src="@color/smart_register_client_divider_color" />

    <ImageButton
        android:id="@+id/btn_edit"
        android:layout_width="@dimen/list_edit_icon_view_width"
        android:layout_height="fill_parent"
        android:layout_margin="5dp"
        android:layout_weight="@integer/child_list_edit_icon_view_weight"
        android:background="@drawable/edit_button_background"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:scaleType="center" />

</LinearLayout>