<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_item_height"
    android:weightSum="@integer/ec_list_item_weight_count"
    android:background="#ffffff">

    <include
        android:id="@+id/profile_info_layout_ki"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="@integer/ec_list_profile_box_weight"
        layout="@layout/smart_register_client_profile_ki"/>

    <ImageView
        android:layout_width="@dimen/smart_register_client_divider_height"
        android:layout_height="fill_parent"
        android:src="@color/smart_register_client_divider_color"/>

    <RelativeLayout
        android:id="@+id/id_detail_layout"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="100"
        android:orientation="horizontal"
        android:weightSum="1">
        <org.ei.opensrp.view.customControls.CustomFontTextView
            android:id="@+id/label_no_ibu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:paddingLeft="5dp"
            android:layout_marginTop="5dp"
            android:text="No Ibu: "
            style="@style/CustomFontTextViewStyle.ListView.Small"/>

        <org.ei.opensrp.view.customControls.CustomFontTextView
            android:id="@+id/no_ibu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/label_no_ibu"
            android:paddingLeft="5dp"
            style="@style/CustomFontTextViewStyle.ListView.Small"/>

        <org.ei.opensrp.view.customControls.CustomFontTextView
            android:id="@+id/label_unique_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/no_ibu"
            android:paddingLeft="5dp"
            android:text="Unique Id: "
            style="@style/CustomFontTextViewStyle.ListView.Small"/>

        <org.ei.opensrp.view.customControls.CustomFontTextView
            android:id="@+id/unique_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="@integer/ec_list_ec_no_view_weight"
            android:layout_below="@+id/label_unique_id"
            android:paddingLeft="5dp"
            android:text="3123142"
            style="@style/CustomFontTextViewStyle.ListView.Small"/>

    </RelativeLayout>

    <ImageView
        android:layout_width="@dimen/smart_register_client_divider_height"
        android:layout_height="fill_parent"
        android:src="@color/smart_register_client_divider_color"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="110"
        android:padding="5dp"
        >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <org.ei.opensrp.view.customControls.CustomFontTextView
                android:id="@+id/txt_usia_klinis"
                style="@style/CustomFontTextViewStyle.ListView.Small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="12 Minggu"/>


            <org.ei.opensrp.view.customControls.CustomFontTextView
                android:id="@+id/lbl_htpt"
                style="@style/CustomFontTextViewStyle.ListView.Small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/edd_title"/>

            <org.ei.opensrp.view.customControls.CustomFontTextView
                android:id="@+id/txt_htpt"
                style="@style/CustomFontTextViewStyle.ListView.Small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="14/08/2014"/>
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:layout_width="@dimen/smart_register_client_divider_height"
        android:layout_height="fill_parent"
        android:src="@color/smart_register_client_divider_color"/>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="120"
        android:padding="5dp"
        >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/status_bar_text_almost_white"
            android:orientation="vertical">

            <org.ei.opensrp.view.customControls.CustomFontTextView
                android:id="@+id/lbl_ki_lila_bb"
                style="@style/CustomFontTextViewStyle.ListView.Small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/lila"/>


            <org.ei.opensrp.view.customControls.CustomFontTextView
                android:id="@+id/txt_ki_lila_bb"
                style="@style/CustomFontTextViewStyle.ListView.Small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="11"/>

            <org.ei.opensrp.view.customControls.CustomFontTextView
                android:id="@+id/lbl_ki_beratbadan_tb"
                style="@style/CustomFontTextViewStyle.ListView.VerySmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/mother_weight"/>


            <org.ei.opensrp.view.customControls.CustomFontTextView
                android:id="@+id/txt_ki_beratbadan_tb"
                style="@style/CustomFontTextViewStyle.ListView.Small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="11"/>
        </LinearLayout>

    </LinearLayout>


    <ImageView
        android:layout_width="@dimen/smart_register_client_divider_height"
        android:layout_height="fill_parent"
        android:src="@color/smart_register_client_divider_color"/>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="190"
        android:padding="5dp"
        >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/status_bar_text_almost_white"
            android:orientation="vertical">

            <!--<org.ei.bidan.view.customControls.CustomFontTextView-->
            <!--android:id="@+id/lbl_ki_anc_penyakit_kronis"-->
