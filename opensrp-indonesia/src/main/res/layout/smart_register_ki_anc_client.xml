            <org.ei.opensrp.view.customControls.CustomFontTextView
                android:id="@+id/txt_tanggal_kunjungan_anc"
                android:layout_marginTop="-2dp"
                style="@style/CustomFontTextViewStyle.ListView.Medium.FourLine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="Something "/>

            <org.ei.opensrp.view.customControls.CustomFontTextView
                android:id="@+id/txt_anc_number"
                android:layout_marginTop="-2dp"
                style="@style/CustomFontTextViewStyle.ListView.Medium.FourLine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="Something "/>

            <org.ei.opensrp.view.customControls.CustomFontTextView
                android:id="@+id/txt_kunjugan_ke"
                android:layout_marginTop="-2dp"
                style="@style/CustomFontTextViewStyle.ListView.Medium.FourLine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="Something "/>

            <!--<org.ei.bidan.view.customControls.CustomFontTextView-->
            <!--android:id="@+id/lbl_ki_anc_alergi"-->
            <!--style="@style/CustomFontTextViewStyle.ListView.VerySmall"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="Alergi :"/>-->


            <!--<org.ei.bidan.view.customControls.CustomFontTextView-->
            <!--android:id="@+id/txt_ki_anc_alergi"-->
            <!--android:layout_marginTop="-2dp"-->
            <!--style="@style/CustomFontTextViewStyle.ListView.Small"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="alergi apa aja"/>-->
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:layout_width="@dimen/smart_register_client_divider_height"
        android:layout_height="fill_parent"
        android:src="@color/smart_register_client_divider_color"/>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="135"
        android:layout_margin="5dp"
        android:id="@+id/anc_status_layout"
        >

        <org.ei.opensrp.view.customControls.CustomFontTextView
            android:id="@+id/txt_status_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="ANC"
            style="@style/CustomFontTextViewStyle.ListView.Medium"/>

        <org.ei.opensrp.view.customControls.CustomFontTextView
            android:id="@+id/label_status_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_status_type"
            android:layout_alignParentLeft="true"
            android:text="Start"
            style="@style/CustomFontTextViewStyle.ListView.Small"/>

        <org.ei.opensrp.view.customControls.CustomFontTextView
            android:id="@+id/txt_status_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_status_type"
            android:layout_toRightOf="@id/label_status_date"
            style="@style/CustomFontTextViewStyle.ListView.Small"/>

        <org.ei.opensrp.view.customControls.CustomFontTextView
            android:id="@+id/txt_alert_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/label_status_date"
            style="@style/CustomFontTextViewStyle.ListView.Medium"/>

    </RelativeLayout>

    <ImageView
        android:layout_width="@dimen/smart_register_client_divider_height"
        android:layout_height="fill_parent"
        android:src="@color/smart_register_client_divider_color"/>

    <ImageButton
        android:id="@+id/btn_edit"
        android:layout_width="@dimen/list_edit_icon_view_width"
        android:layout_height="fill_parent"
        android:layout_weight="95"
        android:scaleType="center"
        android:gravity="center"
        android:layout_margin="5dp"
        android:clickable="true"
        android:focusable="true"
        android:background="@drawable/edit_button_background"/>

