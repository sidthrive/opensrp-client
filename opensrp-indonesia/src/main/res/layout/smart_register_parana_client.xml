<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_item_height"
    android:weightSum="@integer/ec_list_item_weight_count"
    android:background="#ffffff">

    <include layout="@layout/smart_register_client_profile_ki"/>


    <ImageView
        android:layout_width="@dimen/smart_register_client_divider_height"
        android:layout_height="fill_parent"
        android:src="@color/smart_register_client_divider_color"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="150"
        android:padding="2dp"
        >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <org.ei.opensrp.view.customControls.CustomFontTextView
                android:id="@+id/tanggal"
                style="@style/CustomFontTextViewStyle.ListView.Small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tanggal : "/>


            <org.ei.opensrp.view.customControls.CustomFontTextView
                android:id="@+id/lbl_tgl"
                style="@style/CustomFontTextViewStyle.ListView.Small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="00-00-0000"/>

            <org.ei.opensrp.view.customControls.CustomFontTextView
                android:id="@+id/lbl_total"
                style="@style/CustomFontTextViewStyle.ListView.Small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total :"/>
            <org.ei.opensrp.view.customControls.CustomFontTextView
                android:id="@+id/txt_total"
                style="@style/CustomFontTextViewStyle.ListView.Small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/alert_urgent_red"
                android:text="00"/>
        </LinearLayout>

    </LinearLayout>


    <ImageView
        android:layout_width="@dimen/smart_register_client_divider_height"
        android:layout_height="fill_parent"
        android:src="@color/smart_register_client_divider_color"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="130"
        android:padding="2dp"
        >

        <LinearLayout
            android:background="@color/status_bar_text_almost_white"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="0dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:visibility="invisible"
                android:layout_gravity="center"/>

            <org.ei.opensrp.view.customControls.CustomFontTextView
                android:id="@+id/txt_tgl1"
                style="@style/CustomFontTextViewStyle.ListView.Small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/alert_urgent_red"
                android:text="Tgl :00-00-0000"/>


        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:layout_width="@dimen/smart_register_client_divider_height"
        android:layout_height="fill_parent"
        android:src="@color/smart_register_client_divider_color"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="130"
        android:padding="2dp"
        >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image2"
                android:visibility="invisible"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"/>

            <org.ei.opensrp.view.customControls.CustomFontTextView
                android:id="@+id/txt_tgl2"
                style="@style/CustomFontTextViewStyle.ListView.Small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/alert_urgent_red"
                android:text="Tgl :00-00-0000"/>

        </LinearLayout>

    </LinearLayout>


    <ImageView
        android:layout_width="@dimen/smart_register_client_divider_height"
        android:layout_height="fill_parent"
        android:src="@color/smart_register_client_divider_color"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="130"
        android:padding="2dp"
        >

        <LinearLayout
            android:background="@color/status_bar_text_almost_white"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="0dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image3"

                android:visibility="invisible"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"/>

            <org.ei.opensrp.view.customControls.CustomFontTextView
                android:id="@+id/txt_tgl3"
                style="@style/CustomFontTextViewStyle.ListView.Small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/alert_urgent_red"
                android:text="Tgl :00-00-0000"/>

        </LinearLayout>

    </LinearLayout>


    <ImageView
        android:layout_width="@dimen/smart_register_client_divider_height"
        android:layout_height="fill_parent"
        android:src="@color/smart_register_client_divider_color"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="130"
        android:padding="2dp"
        >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image4"
                android:layout_width="50dp"
                android:src="@drawable/smile"
                android:layout_height="50dp"
                android:layout_gravity="center"/>

            <org.ei.opensrp.view.customControls.CustomFontTextView
                android:id="@+id/txt_tgl4"
                style="@style/CustomFontTextViewStyle.ListView.Small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/alert_urgent_red"
                android:text="Tgl :00-00-0000"/>

        </LinearLayout>

    </LinearLayout>


    <ImageView
        android:layout_width="@dimen/smart_register_client_divider_height"
        android:layout_height="fill_parent"
        android:src="@color/smart_register_client_divider_color"/>
    <ImageButton
        android:id="@+id/btn_edit"
        android:layout_width="@dimen/list_edit_icon_view_width"
        android:layout_height="fill_parent"
        android:layout_weight="95"
        android:scaleType="center"
        android:gravity="center"
        android:layout_margin="5dp"
        android:clickable="true"
        android:focusable="true"
        android:background="@drawable/edit_button_background"/>


</LinearLayout>