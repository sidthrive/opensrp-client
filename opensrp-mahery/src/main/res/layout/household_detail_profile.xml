<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="@dimen/client_profile_pic_width"
            android:layout_height="fill_parent"
            android:id="@+id/householdprofileview"
            android:src="@mipmap/household_profile"
            android:scaleType="fitXY" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/list_item_height">

            <org.ei.opensrp.view.customControls.CustomFontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                style="@style/CustomFontTextViewStyle.ListView.Bold"
                android:text="Large Text"
                android:id="@+id/name_household_head"
                android:textColor="@color/text_black"
                android:textIsSelectable="false" />

            <org.ei.opensrp.view.customControls.CustomFontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/CustomFontTextViewStyle"
                android:text="Large Text"
                android:id="@+id/mauza"
                android:textColor="@color/text_black" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>